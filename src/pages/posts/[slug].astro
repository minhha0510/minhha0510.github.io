    color: #22c55e;
    font-weight: 500;
    opacity: 0;
    transition: opacity 0.2s ease;
    height: 1.25rem;
  }

  .copy-feedback.show {
    opacity: 1;
  }

  @media (max-width: 640px) {
    .post-title {
      font-size: 1.75rem;
    }

    .post-subtitle {
      font-size: 1rem;
    }

    .post-actions-top {
      padding: 1.25rem;
      margin: 1.5rem 0;
    }

    .action-buttons {
      flex-direction: column;
    }

    .action-btn {
      justify-content: center;
    }
  }
</style>
